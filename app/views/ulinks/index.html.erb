<h1>Useful Links</h1>

<ul class="list-group">
    <% @ulinks.each do |ulink| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to ulink.title, ulink %>
          <span class="badge bg-primary rounded-pill"><%= ulink.created_at.strftime("%r %D") %></span>
        </li>
    <% end %>
</ul>

<%= link_to "New Useful Link", new_ulink_path %>
