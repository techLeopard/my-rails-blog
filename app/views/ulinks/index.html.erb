<% provide(:title, "Useful Links") %>

<h1>Useful Links</h1>

<div class='my-3'>
  <%= link_to "New Useful Link", new_ulink_path, class: "btn btn-primary" %>
</div>

<ul class="list-group">
    <% @ulinks.each do |ulink| %>
        <li class="list-group-item">
          <%= link_to ulink.title, ulink %><br>
          <%= ulink.body %>
        </li>
    <% end %>
</ul>

