<% provide(:title, "Show article") %>

<h1><%= @article.title %></h1>

<p><%= simple_format @article.body %></p>

<ul>
  <li><%= link_to "All articles", articles_path %></li>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= button_to 'Destroy', article_path(@article),
  data: {:confirm => 'Are you sure?'}, method: :delete %></li>
</ul>

