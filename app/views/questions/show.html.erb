<% provide(:title, "Question") %>

<div class="my-3">
        <%= link_to "All questions", questions_path %>
</div>

<h2><%= @question.title %></h2>

<p><%= @question.body %></p>

<ul>
    <li><%= link_to "Edit", edit_question_path(@question) %></li>
    <li><%= button_to 'Delete', question_path(@question),
    data: {:confirm => 'Are you sure?'}, method: :delete %></li>
</ul>