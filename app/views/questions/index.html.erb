<p style="color: green"><%= notice %></p>

<h1>Questions</h1>

<div class="my-4">
  <%= link_to "New question", new_topic_question_path %> |
  <%= link_to "Back to topic", topic_path(@topic) %>
</div>

<div id="questions">
  <% @questions.each do |question| %>
    <%= render question %>
    <p>
      <%= link_to "Show this question", topic_question_path(@topic, question) %>
    </p>
  <% end %>
</div>


