<p style="color: green"><%= notice %></p>

<h1>Questions</h1>

<div class="btn-group my-4">
  <%= link_to "Back to topic", topic_path(@topic), class: "btn btn-outline-primary" %>
  <%= link_to "New question", new_topic_question_path, class: "btn btn-primary" %>
</div>

<div id="questions">
  <% @questions.each do |question| %>
    <div class="card my-4 p-3">
      <%= render question %>
    <p>
      <%= link_to "Show this question", topic_question_path(@topic, question) %>
    </p>
    </div>
  <% end %>
</div>


