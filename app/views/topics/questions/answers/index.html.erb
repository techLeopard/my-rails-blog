<p style="color: green"><%= notice %></p>

<div class='btn-group my-4'>
  <%= link_to "Back to question", [@topic, @question], class:"btn btn-outline-primary"%>
  <%= link_to "New answer", new_topic_question_answer_path, class: "btn btn-primary" %>
</div>

<h1>Answers</h1>
<p>
  for topic:
</p>

<div id="answers">
  <% @answers.each do |answer| %>
    <div class="card my-4 p-3">
      <%= render answer %>
      <p>
        <%= link_to "Show this answer", [@topic, @question, answer] %>
      </p>
    </div>
  <% end %>
</div>

